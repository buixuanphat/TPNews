<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuanLyTrangBaoFragment">

        <Button
            android:id="@+id/btnAddOutlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm trang báo" />

        <EditText
            android:id="@+id/edtInputOutlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên trang báo"
            android:inputType="text"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgvLogoOutlet"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLogoOutlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSaveOutlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCancelOutlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <ProgressBar
                    android:id="@+id/progressBarOutlet"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <ListView
                    android:id="@+id/lvOutlet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </FrameLayout>


</LinearLayout>