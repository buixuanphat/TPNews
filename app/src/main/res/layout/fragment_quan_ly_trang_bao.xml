<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.QuanLyTrangBaoFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAddOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Thêm trang báo"
                    android:textSize="18dp"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/btnLogoOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Chọn ảnh"
                    android:textSize="18dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/btnSaveOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#35A52A"
                    android:padding="10dp"
                    android:text="Lưu"
                    android:textSize="18dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/btnCancelOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#C70808"
                    android:padding="10dp"
                    android:text="Hủy"
                    android:textSize="18dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edtInputOutlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên trang báo"
            android:inputType="text"
            android:visibility="gone"
            android:background="@color/white"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/imgvLogoOutlet"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <ProgressBar
                    android:id="@+id/progressBarOutlet"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <ListView
                    android:id="@+id/lvOutlet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </FrameLayout>


</LinearLayout>